pipeline {
    agent any

    environment {
        BUILD_SCRIPT = "build_script.sh"
    }

    stages {
        stage('Build') {
            steps {
                sh "chmod +x ${env.BUILD_SCRIPT}"
                sh "./${env.BUILD_SCRIPT}"
            }
        }
    }

    post {
        success {
            mail to: 'akashsmart124@gmail.com',
                 subject: "ğŸ‰ Jenkins Build Success: ${env.JOB_NAME} #${env.BUILD_NUMBER} ğŸ‰",
                 body: "Good news! The build passedğŸ¤©. Check it here ğŸ‘‰ğŸ» ${env.BUILD_URL}"
        }
        failure {
